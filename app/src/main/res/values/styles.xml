<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog" parent="Base.Theme.AppCompat.Dialog">

    </style>
    <style name="TextTitleStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="TextContentAppearanceSmall" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/color_8C000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContentAppearanceMedium" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#8C000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SubmitTextCommonStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/submit_button_text_color_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubmitRotateInButtonCommonStyle">
        <item name="android:background">@drawable/submit_button_common_bg_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
