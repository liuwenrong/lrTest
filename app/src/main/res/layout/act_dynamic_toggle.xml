        <RelativeLayout
            android:id="@+id/android_container"
            style="@style/ConfigLv1ContainerStyle"
            android:visibility="visible"
            >

        <TextView
            android:id="@+id/android_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/log_level"
            android:layout_alignTop="@+id/log_level"
            android:layout_toLeftOf="@+id/log_level"
            android:drawableLeft="@mipmap/ic_android_72px"
            android:gravity="center_vertical"
            android:text="Log开关等级"
            />

        <TextView
            android:id="@+id/log_level"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:padding="5dp"
            android:text="Debug"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:layout_alignParentRight="true"
            />

        <View
            android:id="@+id/line_lv2_android_top"
            style="@style/ConfigLv2LineStyle"
