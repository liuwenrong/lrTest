<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_config_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondary"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/qxdm_container"
            style="@style/ConfigLv1ContainerStyle"
            >

            <TextView
                android:id="@+id/qxdm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_wifi_tethering_black_24dp"
                android:gravity="center_vertical"
                android:text="动态Log开关"
                />

            <TextView
                android:id="@+id/modem_title"
                style="@style/ConfigLv2TitleStyle"
                android:layout_alignBottom="@+id/sb_input"
                android:layout_alignTop="@+id/sb_input"
                android:layout_toLeftOf="@+id/sb_input"
                android:text="Input"
                />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_input"
                style="@style/SwitchButtonStyleMD"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/qxdm_title"/>

            <View
                android:id="@+id/line_lv2_1"
                style="@style/ConfigLv2LineStyle"
                android:layout_width="match_parent"
                android:layout_below="@+id/sb_input"
                />

            <TextView
                android:id="@+id/gps_title"
                style="@style/ConfigLv2TitleStyle"
                android:layout_alignBottom="@+id/sb_power"
                android:layout_alignTop="@+id/sb_power"
                android:layout_toLeftOf="@+id/sb_power"
                android:text="Power"
                />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_power"
                style="@style/SwitchButtonStyleMD"
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/line_lv2_1"/>

            <View
                android:id="@+id/line_lv2_2"
                style="@style/ConfigLv2LineStyle"
                android:layout_width="match_parent"
                android:layout_below="@+id/sb_power"
                />

